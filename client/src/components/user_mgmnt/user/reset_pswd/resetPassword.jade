.page
	.page-signin.width-100(data-ng-controller='ResetPswdCtrl')
		.modal-dialog
			.panel.panel-profile
				.panel-heading(style="padding:0;")
					a.pull-left.profile(href="/")
						img(class="logo" alt="Vibrant Data Logo" src="https://s3-us-west-1.amazonaws.com/vdat-site/vdat_logonew.png" width="390" height="80")
					.clearfix
					h4(style="padding-left: 92px;") Reset Password
				.panel-body
					section
						form.form-horizontal
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-envelope-o.fa-fw
										input.form-control(ng-model='user.email', type='email', placeholder='email', name="email", disabled="disabled" dir-select-all)
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-key.fa-fw
										input.form-control(ng-model='user.newPswd', type='password', placeholder='password', name="password" dir-select-all)
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-key.fa-fw
										input.form-control(ng-model='user.newPswdConfirm', type='password', placeholder='password confirm', name="password" dir-select-all)
							p.text-center.text-muted.text-small
							.divider
							input.power-btn.width-100.big(type="submit" ng-click='resetPassword()', value="Reset Password")
							h5.text-danger {{message}}
			.text-center.text-small
				p Vibrant Data, Inc. All Rights Reserved.
